{
  "manifest_version": 2,

  "name": "Stream Guard",
  "description": "Prevent accidental purchases of Amazon Prime videos that you can stream for free",
  "version": "1.1",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["prime-guard.js"],
      "run_at": "document_end"
    }
  ]
}
